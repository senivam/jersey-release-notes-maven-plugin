<plugin>
    <name>jersey-release-notes-maven-plugin</name>
    <description></description>
    <groupId>org.glassfish.jersey.tools.plugins</groupId>
    <artifactId>jersey-release-notes-maven-plugin</artifactId>
    <version>1.0.1</version>
    <goalPrefix>release-notes</goalPrefix>
    <isolatedRealm>false</isolatedRealm>
    <inheritedByDefault>true</inheritedByDefault>
    <mojos>
        <mojo>
            <goal>release-notes</goal>
            <requiresDirectInvocation>false</requiresDirectInvocation>
            <requiresProject>true</requiresProject>
            <requiresReports>false</requiresReports>
            <aggregator>false</aggregator>
            <requiresOnline>true</requiresOnline>
            <inheritedByDefault>true</inheritedByDefault>
            <implementation>org.glassfish.jersey.tools.plugins.releasenotes.GenerateReleaseNotesMojo</implementation>
            <language>java</language>
            <instantiationStrategy>per-lookup</instantiationStrategy>
            <executionStrategy>once-per-session</executionStrategy>
            <threadSafe>false</threadSafe>
            <parameters>
                <parameter>
                    <name>releaseVersion</name>
                    <type>java.lang.String</type>
                    <required>false</required>
                    <editable>true</editable>
                    <description>version of a release to be published</description>
                </parameter>
                <parameter>
                    <name>githubApiUrl</name>
                    <type>java.lang.String</type>
                    <required>false</required>
                    <editable>true</editable>
                    <description>part of GitHub repo url (like eclipse-ee4j/jersey)</description>
                </parameter>
                <parameter>
                    <name>githubLogin</name>
                    <type>java.lang.String</type>
                    <required>false</required>
                    <editable>true</editable>
                    <description>Login to GitHub account</description>
                </parameter>
                <parameter>
                    <name>githubPassword</name>
                    <type>java.lang.String</type>
                    <required>false</required>
                    <editable>true</editable>
                    <description>password for GitHub account</description>
                </parameter>
                <parameter>
                    <name>githubToken</name>
                    <type>java.lang.String</type>
                    <required>false</required>
                    <editable>true</editable>
                    <description>token for GitHub account (in case of 2 levels of authentication)</description>
                </parameter>
                <parameter>
                    <name>publishToGithub</name>
                    <type>java.lang.Boolean</type>
                    <required>false</required>
                    <editable>true</editable>
                    <description>publish release notes to github (or just log to console)</description>
                </parameter>
                <parameter>
                    <name>templateFilePath</name>
                    <type>java.lang.String</type>
                    <required>false</required>
                    <editable>true</editable>
                    <description>path to release notes template file used to generate release notes for site</description>
                </parameter>
                <parameter>
                    <name>releaseDate</name>
                    <type>java.lang.String</type>
                    <required>false</required>
                    <editable>true</editable>
                    <description>date of release</description>
                </parameter>
                <parameter>
                    <name>releaseNotesFilePath</name>
                    <type>java.lang.String</type>
                    <required>false</required>
                    <editable>true</editable>
                    <description>path (directories) to store</description>
                </parameter>
            </parameters>
            <configuration>
                <releaseVersion implementation="java.lang.String" default-value="2.29.1"/>
                <githubApiUrl implementation="java.lang.String" default-value="eclipse-ee4j/jersey"/>
                <githubLogin implementation="java.lang.String">${property}</githubLogin>
                <githubPassword implementation="java.lang.String">${property}</githubPassword>
                <githubToken implementation="java.lang.String">${property}</githubToken>
                <publishToGithub implementation="java.lang.Boolean" default-value="false"/>
                <templateFilePath implementation="java.lang.String" default-value="default">${property}</templateFilePath>
                <releaseDate implementation="java.lang.String">${property}</releaseDate>
                <releaseNotesFilePath implementation="java.lang.String" default-value="target/release-notes">${property}</releaseNotesFilePath>
            </configuration>
        </mojo>
    </mojos>
    <dependencies/>
</plugin>